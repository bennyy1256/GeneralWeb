@using General.Web.Resource.Views.Shared
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@_Layout.General_Bet| Bet what you like</title>

    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/css/business-frontpage.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(_Layout.General_Bet, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(_Layout.Sports, "Index", "Sports")</li>
                    <li>@Html.ActionLink(_Layout.Esports, "Index", "Esports")</li>
                    <li>@Html.ActionLink(_Layout.Casino, "Index", "Casino")</li>
                    <li>@Html.ActionLink(_Layout.Lotto, "Index", "Lotto")</li>
                    <li>@Html.ActionLink(_Layout.Bingo, "Index", "Bingo")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink(_Layout.LogIn, "Login", "Member")</li>
                    <li>@Html.ActionLink(_Layout.SignUp, "SignUp", "Member")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@_Layout.Language<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("ENGLISH", "SetCulture", "Resource", new { culture = "en-US", returnUrl = this.Request.RawUrl }, null)</li>
                            <li>@Html.ActionLink("中文", "SetCulture", "Resource", new { culture = "zh-TW", returnUrl = this.Request.RawUrl }, null)</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @RenderSection("HeaderDiv", required:false)
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @_Layout.General_Bet</p>
        </footer>
    </div>

    <script src="~/Content/js/jquery-3.1.1.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("FooterScripts", required: false)
</body>
</html>
